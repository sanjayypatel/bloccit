<div class="row">
  <div class="col-md-8">
    <%= render partial: 'votes/voter', locals: {post: @post} %>
    <h1><%= markdown_to_html @post.title %></h1>
    <small>
      <%= image_tag (@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by 
      <%= @post.user.name %>
    </small><br>
    <%= image_tag (@post.image.post_show.url) if @post.image? %>
    <p><%= markdown_to_html @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).update? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
    <% if policy(@post).destroy? %>
      <%= link_to "Delete Post", [@topic, @post], method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this post?"} %>
    <% end %>
    <div>
      <h3><%= pluralize(@post.points, 'point') %></h3>
      <small>
        <%= pluralize(@post.up_votes, 'up vote') %>, 
        <%= pluralize(@post.down_votes, 'down vote') %>
      </small>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <h3>Comments</h3>
    <%= render partial: 'comments/comment', collection: @comments, locals: {topic: @topic, post: @post} %><br>  
    <% if policy(Comment.new).create? %>
      <%= render partial: 'comments/form', locals: {topic: @topic, post: @post} %>
    <% end %>
  </div>
</div>