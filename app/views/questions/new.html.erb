<h1>New Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Questions.</p>
    <ul>
      <li>Focus on questions that can be answered directly.</li>
      <li>Avoid lines of questioning that lead to debate.</li>
    <ul>
  </div>
  <%= form_for @question do |f| %>
    <div class="col-md-1">
      <%= f.label "Status:" %>
      <p>Unresolved</p>
    </div>
    <div class="col-md-7">
      <div class='form-group'>
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Ask a question.' %>
      </div>
      <div class='form-group'>
          <%= f.label :body %>
          <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: 'Describe context, provide code, explain what you have tried.' %>
      </div>
      <div class='form-group'>
          <%= f.submit "Save", class: 'btn btn-success'%>
      </div>
    </div>
  <% end %>
</div>
