<h4><%= link_to @topic.name, topic_path(@topic) %> > <%= link_to @post.title, topic_post_path(@topic, @post) %></h4>
<h1>Edit Summary</h1>

<%= form_for @summary, url: topic_post_summary_path do |f| %>
  <div class="form-group"
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", placeholder: "Enter post summary" %>
  </div>
  <div class="form-group" %>
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>

<% end %>
